{
    "logging": {
        "channels": {
            "c1": {
                "archive": "timestamp",
                "class": "FileChannel",
                "compress": true,
                "formatter": {
                    "class": "PatternFormatter",
                    "pattern": "%d-%b-%y %H:%M:%S.%i %s: [%p] %t",
                    "times": "local"
                },
                "path": "ion.log",
                "purgeAge": "1 months",
                "purgeCount": 3,
                "rotation": "10 M"
            }
        },
        "loggers": {
            "root": {
                "channel": "c1",
                "level": "debug"
            }
        }
    },
    "ion": {
        "offline-interval": 10,
        "eventsage": 7,
        "events": {
            "ip_offline": {
                "mail": false,
                "save": true
            },
            "ip_online": {
                "mail": false,
                "save": true
            },
            "thing_online": {
                "mail": false,
                "save": true
            },
            "thing_offline": {
                "mail": false,
                "save": true
            },
            "not_authorized": {
                "mail": false,
                "save": true
            }
        },
        "mail": {
            "sender": "",
            "recipient": "",
            "subject": "",
            "content": "",
            "host": "",
            "port": 25,
            "loginmethod": "AUTH_LOGIN",
            "user": "",
            "password": ""
        }
    }
}
